<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="0000/00/00"/>

    <TextView
        android:id="@+id/statementTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/dateTextView"
        app:layout_constraintStart_toEndOf="@id/dateTextView"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:maxLines="1"
        android:text="거래명"/>

    <TextView
        android:id="@+id/moneyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/dateTextView"
        app:layout_constraintStart_toEndOf="@id/statementTextView"
        app:layout_constraintEnd_toStartOf="@id/typeTextView"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:gravity="end"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="금액"/>

    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/dateTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="타입"
        android:gravity="end"/>

    <TextView
        android:id="@+id/userTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/statementTextView"
        app:layout_constraintBaseline_toBaselineOf="@id/sumTextView"
        android:layout_marginTop="10dp"
        android:text="사용자"
        android:maxLines="1"
        android:textSize="10sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/sumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/typeTextView"
        app:layout_constraintTop_toBottomOf="@id/typeTextView"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="10sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/sumValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/moneyTextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/sumTextView"
        android:text=""
        android:textSize="10sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/docIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dateTextView"
        app:layout_constraintTop_toBottomOf="@id/dateTextView"
        android:text=""
        android:textColor="@color/white"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>